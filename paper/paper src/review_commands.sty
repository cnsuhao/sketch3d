\newcommand{\MarginNoteColor}{\color{Red}}

% --------------------------------------------------------------------------
% useful commands for adding comments
% --------------------------------------------------------------------------
\newcommand{\summary}[1]{{\SummaryColor [\textbf{Summary}: \textit{#1}]}}
\newcommand{\mnote}[1]{
    {\marginpar{
%        \MarginNoteColor \textit{#1}
        \fcolorbox{Gray}{VioletRed}
        {
            \begin{minipage}[c]{\marginparwidth}
            #1
            \end{minipage}
        }
    }}
}

\newtheorem{ctodo}{\TodoColor {TODO}}
\newcommand{\todo}[1]{
    \par \noindent
    \fcolorbox{Gray}{GreenYellow}{
        \begin{minipage}[c]{0.95\columnwidth}
           \begin{ctodo}
            #1
           \end{ctodo}
        \end{minipage}
    }\vspace{1mm}
    \par
}
